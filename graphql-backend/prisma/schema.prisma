generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

model Recipe {
  id        String  @id @default(uuid())
  title     String
  ingredients String[]
  instructions String
  groceries  Grocery[]
}

model Grocery {
  id       String  @id @default(uuid())
  name     String
  quantity String
  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id])
}
